@model TravelApp.Models.TourPackage

@{
    ViewData["Title"] = "Edit Tour Package";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header bg-warning text-dark py-3 rounded-top-4">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i> Edit Tour: @Model.Title</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-controller="Admin" asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        @* CRITICAL: Hidden ID field so the database knows which record to update *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="IsActive" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold"></label>
                                <input asp-for="Title" class="form-control rounded-pill" />
                                <span asp-validation-for="Title" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Destination" class="form-label fw-bold"></label>
                                <input asp-for="Destination" class="form-control rounded-pill" />
                                <span asp-validation-for="Destination" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Location" class="form-label fw-bold"></label>
                                <input asp-for="Location" class="form-control rounded-pill" />
                                <span asp-validation-for="Location" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AgencyName" class="form-label fw-bold">Agency Partner</label>
                                <input asp-for="AgencyName" class="form-control rounded-pill" />
                                <span asp-validation-for="AgencyName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Price" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text rounded-start-pill">$</span>
                                    <input asp-for="Price" class="form-control rounded-end-pill" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="DurationDays" class="form-label fw-bold"></label>
                                <input asp-for="DurationDays" class="form-control rounded-pill" type="number" />
                                <span asp-validation-for="DurationDays" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Duration" class="form-label fw-bold">Logic Duration</label>
                                <input asp-for="Duration" class="form-control rounded-pill" type="number" />
                                <span asp-validation-for="Duration" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                                <input asp-for="ImageUrl" class="form-control rounded-pill" />
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailableFrom" class="form-label fw-bold"></label>
                                <input asp-for="AvailableFrom" class="form-control rounded-pill" type="date" />
                                <span asp-validation-for="AvailableFrom" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AvailableTo" class="form-label fw-bold"></label>
                                <input asp-for="AvailableTo" class="form-control rounded-pill" type="date" />
                                <span asp-validation-for="AvailableTo" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mb-4">
                                <label asp-for="Description" class="form-label fw-bold"></label>
                                <textarea asp-for="Description" class="form-control rounded-4" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill px-5 fw-bold shadow">Update Changes</button>
                            <a asp-action="Dashboard" class="btn btn-outline-secondary btn-lg rounded-pill px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}