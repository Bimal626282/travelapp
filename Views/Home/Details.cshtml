@model TravelApp.Models.TourPackage

@{
    ViewData["Title"] = "Tour Details";
}

<hr class="my-5" />

<div class="row">
    <div class="col-md-5">
        <h4 class="fw-bold mb-3"><i class="bi bi-pencil-square"></i> Leave a Review</h4>
        <div class="card border-0 shadow-sm rounded-4 p-4 bg-light">
            <form asp-controller="Feedback" asp-action="Submit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="TourPackageId" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Rating</label>
                    <select name="Rating" class="form-select rounded-pill">
                        <option value="5">⭐⭐⭐⭐⭐ - Excellent</option>
                        <option value="4">⭐⭐⭐⭐ - Very Good</option>
                        <option value="3">⭐⭐⭐ - Average</option>
                        <option value="2">⭐⭐ - Poor</option>
                        <option value="1">⭐ - Terrible</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Your Comment</label>
                    <textarea name="Comment" class="form-control rounded-4" rows="3" placeholder="Tell us about your trip..."></textarea>
                </div>

                <button type="submit" class="btn btn-dark w-100 rounded-pill px-4 fw-bold">Post Feedback</button>
            </form>
        </div>
    </div>

    <div class="col-md-7">
        <h4 class="fw-bold mb-3"><i class="bi bi-chat-left-text"></i> Tourist Reviews & Ratings</h4>

        @if (Model.Feedbacks == null || !Model.Feedbacks.Any())
        {
            <div class="alert alert-light border rounded-4 text-center py-5">
                <i class="bi bi-chat-dots fs-1 text-muted"></i>
                <p class="mt-2 mb-0 text-muted">No reviews yet. Be the first to share your experience!</p>
            </div>
        }
        else
        {
            <div class="row" style="max-height: 500px; overflow-y: auto;">
                @foreach (var review in Model.Feedbacks)
                {
                    <div class="col-12 mb-3">
                        <div class="card border-0 shadow-sm rounded-4 p-3 bg-white">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="fw-bold text-primary">@review.TouristName</span>
                                <span class="text-warning">
                                    @for (int i = 0; i < review.Rating; i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                </span>
                            </div>
                            <p class="text-secondary mb-0 fst-italic">"@review.Comment"</p>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>