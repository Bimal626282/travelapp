@model TravelApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4 mb-4">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-dark text-white py-3">
            <h5 class="mb-0 fw-bold"><i class="bi bi-people-fill me-2"></i> Project Group Details - ICT272</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Student Full Name</th>
                        <th>Student ID</th>
                        <th>Institution</th>
                        <th>Project Role</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">Hemanta Guragain</td>
                        <td>20032737</td>
                        <td>King's Own Institute</td>
                        <td><span class="badge bg-info-subtle text-info rounded-pill px-3">Backend & Database Lead</span></td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">Kripesh Shrestha</td>
                        <td>20032113</td>
                        <td>King's Own Institute</td>
                        <td><span class="badge bg-info-subtle text-info rounded-pill px-3">MVC Logic & Controller Design</span></td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">Ravtinder Kaur</td>
                        <td>20023127</td>
                        <td>King's Own Institute</td>
                        <td><span class="badge bg-info-subtle text-info rounded-pill px-3">UI/UX & CSS Customization</span></td>
                    </tr>
                    <tr>
                        <td class="ps-4 fw-bold text-primary">Pratham</td>
                        <td>20029521</td>
                        <td>King's Own Institute</td>
                        <td><span class="badge bg-info-subtle text-info rounded-pill px-3">System Testing & Validation</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="p-5 mb-4 bg-light rounded-4 shadow-sm" style="background: linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.8)), url('https://images.unsplash.com/photo-1469474968028-56623f02e42e'); background-size: cover; background-position: center;">
    <div class="container-fluid py-5 text-center">
        <h1 class="display-5 fw-bold text-primary">Discover Your Next Adventure</h1>
        <p class="fs-4">Book unique travel experiences and manage your trips in one place.</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-4 shadow-sm rounded-pill">Get Started</a>
        }
    </div>
</div>

@* UPDATED: Upcoming Trips gated to logged-in Tourists only *@
@if (User.Identity.IsAuthenticated && !User.IsInRole("Agency"))
{
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold">My Upcoming Trips</h3>
            <a asp-controller="Booking" asp-action="Create" class="btn btn-sm btn-outline-primary rounded-pill">+ Plan New Trip</a>
        </div>

        @if (Model.MyBookings == null || !Model.MyBookings.Any())
        {
            <div class="alert alert-info border-0 shadow-sm rounded-4">
                You don't have any bookings yet. Start by exploring our packages below!
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var booking in Model.MyBookings)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card border-0 shadow-sm rounded-4 bg-primary text-white">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">@booking.DestinationName</h5>
                                <p class="card-text mb-1"><i class="bi bi-calendar"></i> @booking.BookingDate.ToShortDateString()</p>
                                <p class="card-text small">Travelers: @booking.NumberOfTravelers</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
    <hr class="my-5" />
}

<div class="container mb-5">
    <h2 class="fw-bold">Available Tour Packages</h2>
    <p class="text-muted">Browse prices, dates, and group size limits.</p>

    <div class="row mt-4">
        @foreach (var item in Model.TourPackages)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
                    <img src="@item.ImageUrl" class="card-img-top" style="height: 180px; object-fit: cover;" alt="@item.Title">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold mb-1" style="font-size: 1.1rem;">@item.Title</h5>
                        <p class="text-muted small mb-2">@item.Location</p>

                        <p class="card-text small text-secondary mb-3" style="height: 60px; overflow: hidden;">
                            @item.Description
                        </p>

                        <p class="small mb-3"><strong>Agency:</strong> @item.AgencyName</p>

                        <div class="d-flex align-items-center justify-content-between mt-auto">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-success-subtle text-success rounded-pill px-2 py-1 me-2" style="font-size: 0.7rem;">
                                    @item.DurationDays day(s)
                                </span>
                                <span class="fw-bold text-dark">@item.Price.ToString("C")</span>
                            </div>
                        </div>

                        <p class="text-muted mt-2 mb-3" style="font-size: 0.75rem;">
                            Available: @item.AvailableFrom.ToString("dd MMM") - @item.AvailableTo.ToString("dd MMM")
                        </p>

                        <div class="d-grid gap-2">
                            @* UPDATED: Book Now gated to non-Agency users *@
                            @if (!User.IsInRole("Agency"))
                            {
                                <a asp-controller="Booking"
                                   asp-action="Create"
                                   asp-route-destination="@item.Title"
                                   asp-route-price="@item.Price"
                                   asp-route-duration="@item.DurationDays"
                                   class="btn btn-primary btn-sm rounded-pill shadow-sm">
                                    Book Now
                                </a>
                            }

                            <a asp-controller="Booking"
                               asp-action="Details"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-secondary btn-sm rounded-pill">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>